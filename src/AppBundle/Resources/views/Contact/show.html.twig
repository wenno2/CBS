{% extends '::base.html.twig' %}

{% block body -%}
        <div data-role="page"  >
            <div class="ui-grid-a" date-role="main">
    <h1>Contact</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ entity.surname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
        </tbody>
    </table>

     
        <a href="{{ path('contact') }}" data-ajax="false" class="ui-btn" >
            Back to the list
        </a>
    
        <a href="{{ path('contact_edit', { 'id': entity.id }) }}" data-ajax="false" class="ui-btn" >
            Edit
        </a>
    
    {{ form(delete_form) }}

</div>
</div>
{% endblock %}
