{% extends '::base.html.twig' %}

{% block body -%}
        <div data-role="page"  >
            <div class="ui-grid-a" date-role="main">
    <h1>Live</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Draft</th>
                <td>{{ entity.draft }}</td>
            </tr>
        </tbody>
    </table>

    
        <a href="{{ path('live') }}" data-ajax="false" class="ui-btn" >
            Back to the list
        </a>
   
        <a href="{{ path('live_edit', { 'id': entity.id }) }}" data-ajax="false" class="ui-btn" >
            Edit
        </a>
    {{ form(delete_form) }}
</div>
</div>
{% endblock %}
